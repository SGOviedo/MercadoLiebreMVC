<!DOCTYPE html>
<html lang="es">
<%- include('partials/head',{ title : 'Login' }) %>

    <body>
        <%- include('partials/headerNavbar') %>

            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Ingresá</h2>
                    </div>
                </div>

                <div class="col-12">
                    <div class="contenido">
                        <div class="row">
                            <div class="col-12 col-md-3 d-flex justify-content-center p-5">
                                <img src="/images/logo-mercado-liebre.svg" alt="">
                            </div>
                            <div class="col-12 col-md-9 p-5">
                                <form action="/users/login" method="POST" id="form-login">
                                    <div class="row product-detail">

                                        <div class="col-12 col-md-6">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email"
                                                class="form-input form-control"
                                                id="email" aria-describedby="emailHelp" name="email">
                                            <p style="color: red; font-size:12px" class="text-danger" id="error-email">
                                                <%= locals.errors && errors.email ? errors.email.msg : null %>
                                            </p>

                                        </div>
                                        <div class="col-12 col-md-6">
                                            <label for="pass" class="form-label">Contraseña</label>
                                            <input type="password"
                                                class="form-input form-control"
                                                id="pass" name="pass">
                                            <p style="color: red; font-size:12px" class="text-danger" id="error-pass">
                                                <%= locals.errors && errors.pass ? errors.pass.msg : null %>
                                            </p>

                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group form-check">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck1"
                                                    name="remember" style="width: 30px; height:30px">
                                                <label class="form-check-label form-label ms-2"
                                                    for="exampleCheck1">Recordarme</label>
                                            </div>
                                        </div>

                                        <div class="col-12 col-md-6">
                                            <div class="d-flex gap-2">
                                                  <button type="submit" class="buy-now-button">Iniciar sesión</button>
                                            <a href="/oauth2/google" class="buy-now-button bg-danger text-white"><span>Iniciar con Google</span> </a>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/footer') %>
                <script src="/js/login.js"></script>
    </body>

</html>